<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="600dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="Edit Task"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/taskName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/default_bottom_task_edit_cmpnt"
            android:ems="10"
            android:layout_marginTop="10dp"
            android:hint="@string/task_editor_hint_task_name"
            android:inputType="textPersonName"
            android:minHeight="@dimen/bottom_sheet_textView_minHeight"
            android:selectAllOnFocus="false"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/taskCat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/default_bottom_task_edit_cmpnt"
            android:clickable="true"
            android:drawableStart="@drawable/ic_list"
            android:drawablePadding="3dp"
            android:ems="10"
            android:gravity="center_vertical"
            android:hint="@string/task_editor_hint_list"
            android:minHeight="@dimen/bottom_sheet_textView_minHeight"
            android:textSize="@dimen/editor_textSize" />

        <TextView
            android:id="@+id/taskTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:background="@drawable/default_bottom_task_edit_cmpnt"
            android:clickable="true"
            android:drawableStart="@drawable/ic_calendar_18dp"
            android:drawablePadding="3dp"
            android:ems="10"
            android:gravity="center_vertical"
            android:hint="@string/task_editor_hint_date"
            android:minHeight="@dimen/bottom_sheet_textView_minHeight"
            android:textSize="@dimen/editor_textSize" />

        <TextView
            android:id="@+id/taskDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:background="@drawable/default_bottom_task_edit_cmpnt"
            android:clickable="true"
            android:drawableStart="@drawable/ic_clock"
            android:drawablePadding="3dp"
            android:ems="10"
            android:gravity="center_vertical"
            android:hint="@string/task_editor_hint_time"
            android:minHeight="@dimen/bottom_sheet_textView_minHeight"
            android:textSize="@dimen/editor_textSize" />

        <TextView
            android:id="@+id/taskPriority"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:background="@drawable/default_bottom_task_edit_cmpnt"
            android:clickable="true"
            android:drawableStart="@drawable/ic_priority"
            android:drawablePadding="3dp"
            android:ems="10"
            android:gravity="center_vertical"
            android:hint="@string/task_editor_hint_priority"
            android:minHeight="@dimen/bottom_sheet_textView_minHeight"
            android:textSize="@dimen/editor_textSize" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/bottom_task_remind_me_label"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/taskRemindLinear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:background="@drawable/default_bottom_task_edit_cmpnt"
            android:minHeight="@dimen/bottom_sheet_textView_minHeight"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/taskRemindMe"
                android:layout_width="330dp"
                android:layout_height="match_parent"
                android:clickable="true"
                android:drawableStart="@drawable/ic_reminder"
                android:drawablePadding="3dp"
                android:ems="10"
                android:gravity="center_vertical"
                android:hint="@string/task_editor_hint_reminder"
                android:textSize="18sp" />

        </LinearLayout>

        <Button
            android:id="@+id/updateTask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="Update Task"
            android:layout_marginTop="3dp"
            android:minHeight="@dimen/bottom_sheet_textView_minHeight"/>

        <Button
            android:id="@+id/removeTask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="3dp"
            android:minHeight="@dimen/bottom_sheet_textView_minHeight"
            android:backgroundTint="@color/quantum_googred"
            android:text="Remove Task" />
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>